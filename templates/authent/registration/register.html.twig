{% extends 'parametrage/base_parametrage.html.twig' %}

{% block title %}Register{% endblock %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %} 
{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
<div class="container">
    <h1>Cr√©ation d'un utilisateur</h1>

    {{ form_start(registrationForm) }}   
        <div class="container">
            <div class="row">
                <div class="col-sm-3" >
                    {{ form_row(registrationForm.login) }}
                </div>
                <div class="col-sm-4">
                    {{ form_row(registrationForm.plainPassword, { label: 'Password' }) }}
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-sm-5" >
                    {{ form_row(registrationForm.roles) }}
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-sm-2" >
                    {{ form_row(registrationForm.joueur) }}
                </div>
                <div class="col-sm-2" >
                    {{ form_row(registrationForm.agreeTerms) }}
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-sm-2" >
                    <button type="submit" class="btn btn-success">Creer</button>
                </div>
                <div class="col-sm-2" >
                    <a href="{{ path('admin') }}" class="btn btn-primary" aria-current="page">Retour</a>
                </div>
            </div>
	    </div>
</div>
    {{ form_end(registrationForm) }}
    
{% endblock %}

