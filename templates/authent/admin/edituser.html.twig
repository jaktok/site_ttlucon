{% extends 'parametrage/base_parametrage.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}
{% form_theme userForme 'bootstrap_4_layout.html.twig' %} 
{% block body %}
<!-- Insérer cette balise "link" après celle de Bootstrap -->
<link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css">

<!-- Insérer cette balise "script" après celle de Bootstrap -->
<script src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>
    {{ form_start(userForme) }}
    <div class="container">
        <h1>Modifier un utilisateur</h1>
    
        <div class="row">
            <div class="col-sm-4" >
                {{ form_row(userForme.login) }}
            </div>
            <div class="col-sm-4" >
                {{ form_row(userForme.password) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4" >
                {{ form_row(userForme.roles) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4" >
                {{ form_row(userForme.joueur) }}
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-2" >
                <button type="submit" class="btn btn-success">Enregistrer</button>
            </div>
            <div class="col-sm-2" >
                <a href="{{ path('app_utilisateurs')}}" class="btn btn-primary" aria-current="page">Retour</a>
            </div>
        </div>
        
    </div>
    
    {{ form_end(userForme) }}
{% endblock %}
