{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Salut {{ detail_club.nom }}!</h1>

    
    <ul>
 		L'adresse de la salle est : {{ detail_club.adresseSalle1 }}	   
    </ul>
    
    Actualités :
    <br>
    {% for actu in actus_club %}
    <a href="{{ actu.url }}" target="_blank">
    <img src="{{ actu.photo }}" class="img-thumbnail" alt="Responsive image" width="50%" height="50%" >
    </a>		
 		<li>{{ actu.titre }} : {{ actu.description }}</li>
	{% endfor %}
    
    
</div>
{% endblock %}
