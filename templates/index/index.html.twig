<div class="container">

<div class="row">
	<!-- Colonne 1 --> 
	<div class="col-sm-2 bg-light" >
		<div class="row">
			<div class="col-sm-12">
				<img alt="" src="{{ asset('images/logo2.gif') }}" class="img-thumbnail" alt="Responsive image" align="top">
			</div>
		</div>
					<br>
			
		<div class="row overflow-auto " align="center">
			<div class="col-sm-12">
		
			<p>--------------------------
