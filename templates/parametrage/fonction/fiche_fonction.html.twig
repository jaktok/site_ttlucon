{% extends 'parametrage/base_parametrage.html.twig' %} {% block title %}Fonctions{%
endblock %} {% block body %}
<meta charset="UTF-8" />

<!-- Insérer cette balise "link" après celle de Bootstrap -->
<link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css">

<!-- Insérer cette balise "script" après celle de Bootstrap -->
<script src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>


   <div class="container">

{{ form_start(formFonctions) }}
<div class="container">
	<h1 align="center">Fonction</h1>
<br>
      <table class="table table-striped" data-toggle="table" data-pagination="false">
        <thead>
          <tr>
            <th>Libellé</th>
            <th>Position</th>
            <th>Joueur</th>
          </tr>
        </thead>
        <tbody>
        {% if fonctions is defined %}
        {% for fonction in fonctions %}
          <tr>
           	<td>{{ fonction.libelle }}</td>
           	<td>{{ fonction.position }}</td>
           	<td>{{ fonction.joueurs.nom }} {{ fonction.joueurs.prenom }}</td>
          </tr>
        {% endfor %}
        {% endif %}
        </tbody>
      </table>


	<div class="row mt-5">
		<div class="col-sm-1" >
			{{ form_label(formFonctions.libelle) }}&nbsp;:
		</div>
		<div class="col-sm-3" >
			{{ form_widget(formFonctions.libelle) }}
		</div>
		<div class="col-sm-1">
			{{ form_label(formFonctions.position) }}&nbsp;:
		</div>
		<div class="col-sm-3" align="left">
			{{ form_widget(formFonctions.position) }}
		</div>
		<div class="col-sm-1">
			{{ form_label(formFonctions.joueurs) }}&nbsp;:
		</div>
		<div class="col-sm-3">
			{{ form_widget(formFonctions.joueurs) }}
		</div>

	</div>

<br><br>
	<div class="row">	
		<div class="col-sm-2">
		<button type="submit" class="btn btn-success">Enregistrer</button>
 		</div>
 	<div class="col-sm-2">
 		<a href="{{ path('fonctions') }}"  class="btn btn-primary" aria-current="page" >Retour</a>
 	</div>
 	</div>
</div>
{{ form_end(formFonctions) }}
{% endblock %}
