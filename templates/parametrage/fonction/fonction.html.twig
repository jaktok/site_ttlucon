{% extends 'parametrage/base_parametrage.html.twig' %} {% block title %}Fonctions{%
endblock %} {% block body %}
<meta charset="UTF-8" />

<!-- Insérer cette balise "link" après celle de Bootstrap -->
<link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css">

<!-- Insérer cette balise "script" après celle de Bootstrap -->
<script src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>


   <div class="container">

{{ form_start(formFonctions) }}

   <div class="container">
      <h1>Liste des Fonctions dans le club</h1>
    <div class="col-sm-2">
 		<a href="{{ path('fonction_param_nouveau') }}" class="btn btn-primary mb-2" aria-current="page">Créer une fonction</a>
 	</div>
      <table class="table table-striped" data-toggle="table" data-pagination="false">
        <thead>
          <tr>
            <th>Libellé</th>
            <th>Position</th>
            <th>Joueur</th>
          </tr>
        </thead>
        <tbody>
        {% if fonctions is defined %}
        {% for fonction in fonctions %}
          <tr>
           	<td>{{ fonction.libelle }}</td>
           	<td>{{ fonction.position }}</td>
           	<td>{{ fonction.joueurs.nom }} {{ fonction.joueurs.prenom }}</td>
             <td><a href="{{ path('fonction_param_modif', {'id': fonction.id})}}" class="btn btn-primary">Modifier</a></td>
     		<td><a href="{{ path('supprime_fonction', {'id': fonction.id})}}" class="btn btn-primary">Supprimer</a></td>
     
          </tr>
        {% endfor %}
       	{% else %}
        		<td>{{ form_row(formFonctions.libelle,{'attr':{'placeholder': "" }}) }}</td>
            	<td>{{ form_row(formFonctions.position,{'attr':{'placeholder': "" }}) }}</td>
          		<td>{{ form_row(formFonctions.joueurs) }}</td>
            	<td><a href="{{ path('fonction_param_nouveau')}}" class="btn btn-primary">Enregistrer</a></td>
        {% endif %} 
        </tbody>
      </table>
    </div>

{{ form_end(formFonctions) }}

</div>
{% endblock %}
