{% extends 'parametrage/base_parametrage.html.twig' %} {% block title %}Hello IndexController!{%
endblock %} {% block body %}
<meta charset="UTF-8" />

<!-- Insérer cette balise "link" après celle de Bootstrap -->
<link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css">

<!-- Insérer cette balise "script" après celle de Bootstrap -->
<script src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>


<div class="container">
    <div class="row">
        <div class="col-sm-4" align="center">
 		      <h1>Calendrier</h1>
 	      </div>	
    </div>
    <div class="row">
   	    <div class="col-sm-3">
 		      <br><a href="{{ path('calendrier_param_new', { 'idTeam': idTeam }) }}" class="btn btn-primary mb-2" aria-current="page">Ajouter une rencontre</a>
 	      </div>
        <div class="col-sm-3">
 		      <br><a href="{{ path('equipes_param') }}" class="btn btn-primary mb-2" aria-current="page">Retour</a>
 	      </div>
        <div class="col-sm-3">
 		      <br><a href="{{ path('majAuto_calendrier', { 'idTeam': idTeam }) }}" class="btn btn-warning mb-2" aria-current="page">MajAuto</a>
 	      </div>
        <div class="col-sm-3">
 		      <br><a href="{{ path('vider_calendrier', { 'idTeam': idTeam }) }}" class="btn btn-danger mb-2" aria-current="page">Vider calendrier</a>
 	      </div>
    </div>
</div>
	<div class="row">
		<div class="col-sm-6">
			<table class="table table-striped" data-toggle="table" data-pagination="false">
			        <thead>
			          <tr>
			            <th data-sortable="true">Date Rencontre</th>
			            <th>Adversaire</th>
			            <th data-sortable="true">Domicile</th>
			            <th data-sortable="true">Phase</th>
			            <th>Modif.</th>
			            <th>Supp.</th>
			          </tr>
			        </thead>
			        <tbody>
			        {% if rencontres is defined %}
			        {% for rencontre in rencontres %}
			        <tr>
			            <td>{{ rencontre.dateRencontre|date('d/m/Y') }}</td>
			           	<td>{{ rencontre.equipeA }} / {{ rencontre.equipeB }}</td>
			            {% if rencontre.domicile == 1  %}
			           		<td>Domicile</td>
			           	{% else %}
			           			<td>Exterieur</td>
			           	{% endif %}
			            <td>{{ rencontre.phase }}</td> 
			            <td><a href="{{ path('calendrier_param_modif', { 'id': rencontre.id}) }}" class="btn btn-primary">Modifier</a></td>
			            <td><a href="{{ path('supprime_calendrier', { 'id': rencontre.id}) }}" class="btn btn-danger" onclick="return confirm('Suppression de {{ rencontre.dateRencontre|date('d/m/Y') }} ?');">Supprimer</a></td>
			        </tr>
			        {% endfor %}
			        {% endif %}
			    </tbody>
			</table>
		</div>
		<div class="col-sm-6">
		
					<table class="table table-striped" data-toggle="table" data-pagination="false">
			        <thead>
			          <tr>
			            <th data-sortable="true">Date Rencontre</th>
			            <th>Adversaire</th>
			            <th data-sortable="true">Domicile</th>
			            <th data-sortable="true">Phase</th>
			            <th>Modif.</th>
			            <th>Supp.</th>
			          </tr>
			        </thead>
			        <tbody>
			        {% if rencontres2 is defined %}
			        {% for rencontre2 in rencontres2 %}
			        <tr>
			            <td>{{ rencontre2.dateRencontre|date('d/m/Y') }}</td>
			           	<td>{{ rencontre2.equipeA }} / {{ rencontre2.equipeB }}</td>
			            {% if rencontre2.domicile == 1  %}
			           		<td>Domicile</td>
			           	{% else %}
			           			<td>Exterieur</td>
			           	{% endif %}
			            <td>{{ rencontre2.phase }}</td> 
			            <td><a href="{{ path('calendrier_param_modif', { 'id': rencontre2.id}) }}" class="btn btn-primary">Modifier</a></td>
			            <td><a href="{{ path('supprime_calendrier', { 'id': rencontre2.id}) }}" class="btn btn-danger" onclick="return confirm('Suppression de {{ rencontre2.dateRencontre|date('d/m/Y') }} ?');">Supprimer</a></td>
			        </tr>
			        {% endfor %}
			        {% endif %}
			    </tbody>
			</table>
		
		
		</div>

	</div>
{% endblock %}
