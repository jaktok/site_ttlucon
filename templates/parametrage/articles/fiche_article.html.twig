{% extends 'parametrage/base_parametrage.html.twig' %} {% block title %}Fiche Article{%
endblock %} 
{% form_theme formArticles 'bootstrap_4_layout.html.twig' %}
{% block body %}
<meta charset="UTF-8" />

<!-- Insérer cette balise "link" après celle de Bootstrap -->
<link rel="stylesheet"
	href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css">

<!-- Insérer cette balise "script" après celle de Bootstrap -->
<script
	src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>

<meta charset="UTF-8" />

<script
	src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js"
	type="text/javascript"></script>
<script
	src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"
	type="text/javascript"></script>
	<!-- <script src="{{ asset('js/editor.js') }}"></script>-->
<link
	href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css"
	rel="Stylesheet" type="text/css" />
<!-- <link href="{{ asset('css/bootstrap.css') }}">-->

<script type="text/javascript">



jQuery(document).ready(function() {
			
            $('.js-datepicker').datepicker({
            dateFormat: "dd/mm/yy"
            });
        });
        
</script>

   <div class="container">

{{ form_start(formArticles) }}
<div class="container">
	<h1>Article</h1>



	<div class="row">
		<div class="col-sm-3" >
			{{ form_row(formArticles.joueur) }}
		</div>
		<div class="col-sm-3">
			{{ form_row(formArticles.titre) }}
		</div>
		<div class="col-sm-3">
			{{ form_row(formArticles.date) }}
		</div>
		<div class="col-sm-3">
			{{ form_row(formArticles.en_ligne) }}
		</div>
	</div>
	
	{% if nomPhotos is defined %}
    {% for nomPhoto in nomPhotos %}
	<div class="row"  >
		<div class="col-sm-12">
			<div class="row border border-primary mt-3"  >
				<div class="col-sm-4">
					<div class="row">
						<div class="col-sm-4">
							{{ form_row(formArticles.fichier) }}
						</div>
					</div>
					<br><br><br>
					<div class="row">
						<div class="col-sm-4">
							<a href="{{ path('supprime_image_article', { 'id': idArticle})}}"  class="btn btn-primary" aria-current="page" >Effacer</a>
						</div>
					</div>
				</div>
				<div class="col-sm-4">
					<div class="col-sm-8 h-auto">
						<img src="{{ asset('/articles/'~nomPhoto) }}" alt="" class="img-fluid" >
					</div>
				</div>
			</div>
		</div>
	</div>
	{% endfor %}
	{% endif %}
		<div class="row mt-3">
		<div class="col-sm-3 " >
			{{ form_row(formArticles.auteur) }}
		</div>
	</div>
	<div class="row mt-3">
		<div class="col-sm-12 ">
			{{ form_row(formArticles.text) }}
		</div>
	</div>
 
</div>
	
	<div class="row mt-5">	
		<div class="col-sm-2">
		<button type="submit" class="btn btn-success">Enregistrer</button>
 		</div>
 	<div class="col-sm-2">
 		<a href="{{ path('articles') }}"  class="btn btn-primary" aria-current="page" >Retour</a>
 	</div>
 	</div>
</div>
{{ form_end(formArticles) }}
{% endblock %}
