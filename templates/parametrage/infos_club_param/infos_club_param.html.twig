{% extends 'parametrage/base_parametrage.html.twig' %} {% block title %}Infos club{%
endblock %}
{% form_theme formInfos 'bootstrap_4_layout.html.twig' %}
 {% block body %}
<meta charset="UTF-8" />

<!-- Insérer cette balise "link" après celle de Bootstrap -->
<link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css">

<!-- Insérer cette balise "script" après celle de Bootstrap -->
<script src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>

{{ form_start(formInfos) }}

   <div class="container">
      <h1>Liste des infos de la page de présentation</h1>
      <table class="table table-striped" data-toggle="table" data-pagination="false">
        <thead>
          <tr>
            <th>Libellé</th>
            <th>Contenu</th>
            <th>Modification</th>
          </tr>
        </thead>
        <tbody>
        {% if infosclub is defined %}
        {% for infoclub in infosclub %}
          <tr>
           	<td>{{ infoclub.libelle }}</td>
           	<td>{{ infoclub.contenu }}</td>
             <td><a href="/dirigeant/param/infos/club/gerer/{{ infoclub.id}}" class="btn btn-primary">Modifier</a></td>
          </tr>
        {% endfor %}
		{% endif %}
		{% if infoclub is defined %}
          <tr>
            <td>{{ form_row(formInfos.libelle,{'attr':{'placeholder': "" }}) }}</td>
            <td>{{ form_row(formInfos.contenu,{'attr':{'placeholder': "" }}) }}</td>
            <td><button type="submit" class="btn-succes">Enregistrer </button></td>
          </tr>
		{% endif %}
        </tbody>
      </table>
    </div>

{{ form_end(formInfos) }}

{% endblock %}
