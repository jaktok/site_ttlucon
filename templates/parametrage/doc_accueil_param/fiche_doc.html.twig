{% extends 'parametrage/base_parametrage.html.twig' %}

{% block title %}Hello DocAccueilController!{% endblock %}

{% block body %}
<meta charset="UTF-8" />

<!-- Insérer cette balise "link" après celle de Bootstrap -->
<link rel="stylesheet"
	href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css">

<!-- Insérer cette balise "script" après celle de Bootstrap -->
<script
	src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>

<meta charset="UTF-8" />

<script
	src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js"
	type="text/javascript"></script>
<script
	src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"
	type="text/javascript"></script>
	<!-- <script src="{{ asset('js/editor.js') }}"></script>-->
<link
	href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css"
	rel="Stylesheet" type="text/css" />
<!-- <link href="{{ asset('css/bootstrap.css') }}">-->


   <div class="container">

{{ form_start(formDocs) }}
<div class="container">
	<h1>Document accueil</h1>

     <table class="table table-striped" data-toggle="table" data-pagination="false">
        <thead>
          <tr>
            <th>Nom</th>
            <th>Actif</th>
            <th>Position</th>
             </tr>
        </thead>
        <tbody>
        {% if docs is defined %}
        {% for doc in docs %}
          <tr>
           	<td>{{ doc.libelle }}</td>
            {% if doc.actif == 1  %}
           		<td>oui</td>
           	{% else %}
           		<td>non</td>
           	{% endif %}     
           	<td>{{ doc.position }}</td>      
          </tr>
        {% endfor %}
       {% endif %} 
        </tbody>
      </table>

	<div class="row mt-5" >
		<div class="col-sm-6" >
			{{ form_row(formDocs.libelle) }}
		</div>
		<div class="col-sm-3" >
			{{ form_row(formDocs.position) }}
		</div>
		<div class="col-sm-3 mt-2" >
			{{ form_row(formDocs.actif) }}
		</div>
	</div>
	
	{% if nomFichier is defined and nomFichier is not empty %}
	<div class="row"  >
		<div class="col-sm-12">
			<div class="row border border-primary mt-3"  >
				<div class="col-sm-4">
					<div class="row">
						<div class="col-sm-4">
							{{ form_row(formDocs.fichier) }}
						</div>
					</div>
					<br><br><br>
					<div class="row">
						<div class="col-sm-4">
							
						</div>
					</div>
				</div>
				<div class="col-sm-8">
					<div class="col-sm-8 h-auto">
						nomp du fichier : {{ nomFichier }}
					</div>
				</div>
			</div>
		</div>
	</div>
	{% else %}
	<div class="row"  >
		<div class="col-sm-12">
			<div class="row border border-primary mt-3"  >
				<div class="col-sm-4">
					<div class="row">
						<div class="col-sm-4">
							{{ form_row(formDocs.fichier) }}
						</div>
					</div>
					<br><br><br>
					<div class="row">
						<div class="col-sm-4">
							
						</div>
					</div>
				</div>
				<div class="col-sm-4">
					<div class="col-sm-8 h-auto">
					</div>
				</div>
			</div>
		</div>
	</div>
	{% endif %}
 
</div>
	
	<div class="row mt-5">	
		<div class="col-sm-2">
		<button type="submit" class="btn btn-success">Enregistrer</button>
 		</div>
 	<div class="col-sm-2">
 		<a href="{{ path('doc') }}"  class="btn btn-primary" aria-current="page" >Retour</a>
 	</div>
 	</div>
</div>
{{ form_end(formDocs) }}
{% endblock %}
