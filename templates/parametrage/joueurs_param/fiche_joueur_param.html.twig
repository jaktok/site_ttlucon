{{ form_start(formJoueur) }}

<div class="container">
	<h1>Fiche Joueur</h1>

	<div class="row">
		<div class="col-sm-3" >
			{{ form_row(formJoueur.nom) }}
		</div>
		<div class="col-sm-3">
			{{ form_row(formJoueur.prenom) }}
		</div>
		<div class="col-sm-3">
			{{ form_row(formJoueur.telephone) }}
		</div>
		<div class="col-sm-3">
			{{ form_row(formJoueur.date_naissance) }}
		</div>
	</div>

	<div class="row">
		<div class="col-sm-6" >
			{{ form_row(formJoueur.adresse) }}
		</div>
		<div class="col-sm-2">
			{{ form_row(formJoueur.cp) }}
		</div>
		<div class="col-sm-4">
			{{ form_row(formJoueur.ville) }}
		</div>
	</div>

	<div class="row">
		<div class="col-sm-3" >
			{{ form_row(formJoueur.mail) }}
		</div>
		<div class="col-sm-3">
			{{ form_row(formJoueur.num_licence) }}
		</div>
		<div class="col-sm-3">
			{{ form_row(formJoueur.classement) }}
		</div>
	<div class="col-sm-3">
	 {% if libCategorie is defined %}
	
		 {{ form_label (formJoueur.categories) }}
		 ( {{ libCategorie }} )
		  {% set catplaceholder = libCategorie|trans %}
		{{ form_widget(formJoueur.categories, {'attr': {'placeholder': 'libCategorie'|trans}}) }}
		 {% endif %}
		
		</div>	
	</div>	
	<div class="row">
		<div class="form-group">{{ form_row(formJoueur.divers) }}</div>
	</div>
	
	<div class="row">
		<div class="col-sm-2" >
			{{ form_row(formJoueur.certificat) }}
		</div>
		<div class="col-sm-2">
			{{ form_row(formJoueur.cotisation) }}
		</div>
		<div class="col-sm-2">
			{{ form_row(formJoueur.indiv) }}
		</div>
		<div class="col-sm-2">
			{{ form_row(formJoueur.bureau) }}
		</div>	
	</div>
	
	<div class="row">
		<div class="col-sm-2">
			{{ form_row(formJoueur.date_certificat)}}
		</div>
	</div>
	
	<div class="row">
		<div class="col-sm-6" >
			{{ form_row(formJoueur.contact_nom) }}
		</div>
		<div class="col-sm-2">
			{{ form_row(formJoueur.contact_prenom) }}
		</div>
		<div class="col-sm-4">
			{{ form_row(formJoueur.contact_tel) }}
		</div>
	</div>
<br>	
	<div class="row">
		<div class="col-sm-4">
			{{ form_row(formJoueur.nom_photo) }}
		</div>
		<div class="col-sm-4">
			<img src="{{ asset('/images/'~nomPhoto) }}" alt="" width="150">
		</div>
		<div class="col-sm-2">
		
		</div>
	</div>
	<div class="row">
		<div class="col-sm-4">
		
		</div>
		<div class="col-sm-4">
				<a href="/supprime/image/{{ joueur.id}}"  class="btn btn-primary" aria-current="page" >Effacer</a>
		</div>
		<div class="col-sm-2">
	
 		</div>
	</div>
	
	
	
			<br><br><br>
	<div class="row">	
		<div class="col-sm-2">
		<button type="submit" class="btn btn-success">Enregistrer</button>
 		</div>
 	<div class="col-sm-2">
 		<a href="/joueurs/param/"  class="btn btn-primary" aria-current="page" >Retour</a>
 	</div>
 	</div>
</div>


{{ form_end(formJoueur) }} {% endblock %}


