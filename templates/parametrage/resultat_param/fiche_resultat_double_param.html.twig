{% extends 'parametrage/base_parametrage.html.twig' %} 
{% block title %} Hello IndexController! {% endblock %}
{% form_theme formMatch 'bootstrap_4_layout.html.twig' %} 

{% block body %}
<script type="text/javascript">

</script>

<!-- Insérer cette balise "link" après celle de Bootstrap -->
<link rel="stylesheet"
	href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css">

<!-- Insérer cette balise "script" après celle de Bootstrap -->
<script
	src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>

<meta charset="UTF-8" />

{{ form_start(formMatch) }}
<div class="container">
	<h1 align="center">Fiche Resultat Double</h1>
	
		<table class="table table-striped" data-toggle="table" data-pagination="false">
        <thead>
          <tr>
          <th>Joueur 1</th>
            <th>Joueur 2</th>
            <th>Numéro de double</th>
            <th>Résultat</th>
          </tr>
        </thead>
        <tbody>
		{% if matchsDouble is defined %}
        {% for matchDouble in matchsDouble %}
        <tr>
        <td> {{ matchDouble.joueur1.nom }} {{ matchDouble.joueur1.prenom }} </td>
        <td> {{ matchDouble.joueur2.nom }} {{ matchDouble.joueur2.prenom }} </td>
        <td> {{ matchDouble.numDouble }}</td>
            {% if matchDouble.victoire == 1  %}
           		<td>Victoire</td>
            {% else %}
              <td>Défaite</td>
           	{% endif %}
        </tr>
        {% endfor %}
        {% endif %}
    	</tbody>
	</table>
	<br>
	
        <div class="row mt-5">
            <div class="col-sm-3">
                    <div class="row">	
                        <div class="col-sm-12" align="center">
                                {{ form_label(formMatch.id_joueur1) }}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-sm-12 overflow-auto" style="height: 20vh">
                                {{ form_widget(formMatch.id_joueur1) }}
                        </div>
                    </div>
                </div>

            <div class="col-sm-3">
                    <div class="row">	
                        <div class="col-sm-12" align="center">
                                {{ form_label(formMatch.id_joueur2)}}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-sm-12 overflow-auto" style="height: 20vh">
                                {{ form_widget(formMatch.id_joueur2) }}
                        </div>
                    </div>
        	 </div>
        	 <div class="col-sm-2">
                    <div class="row">	
                        <div class="col-sm-12" align="center">
                                {{ form_label(formMatch.victoire)}}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-sm-12" align="center">
                                {{ form_widget(formMatch.victoire) }}
                        </div>
                    </div>
        	 </div>
        	 <div class="col-sm-3">
                    <div class="row">	
                        <div class="col-sm-12" align="center">
                                {{ form_label(formMatch.double1)}}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-sm-12" align="center">
                                {{ form_widget(formMatch.double1) }}
                        </div>
                    </div>
        	 </div>

            </div>
        <div class="row">	
            <div class="col-sm-2">
                <button type="submit" class="btn btn-success">Enregistrer</button>
            </div>
            <div class="col-sm-2">
                <a href="{{ path('modifier_resultat_param', { 'id': idRencontre }) }}"  class="btn btn-primary" aria-current="page" >Retour</a>
            </div>
        </div>
</div>
{{ form_end(formMatch) }}


 {% endblock %}