        <div class="col-sm-4">
			{{ form_row(formResultat.scoreB) }}
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-sm-4">
			<a href="{{ path('new_match_resultat_param') }}" class="btn btn-primary">Ajouter un match</a>
		</div>
		<div class="col-sm-4">
			<a href="{{ path('new_match_resultat_param') }}" class="btn btn-primary">Ajouter un double</a>
		</div>
	</div>
	
	<br>
	<table class="table table-striped" data-toggle="table" data-pagination="false">
