{% extends 'parametrage/base_parametrage.html.twig' %} 
{% block title %} Hello IndexController! {% endblock %}
{% form_theme formJoueurMatch 'bootstrap_4_layout.html.twig' %} 

{% block body %}
<script type="text/javascript">

</script>

<!-- Insérer cette balise "link" après celle de Bootstrap -->
<link rel="stylesheet"
	href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css">

<!-- Insérer cette balise "script" après celle de Bootstrap -->
<script
	src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>

<meta charset="UTF-8" />


{{ form_start(formJoueurMatch) }}

<div class="container">
	<h2 align="center">Matchs Joueur</h1>

		<div class="container mt-3">
			  <table class="table table-striped" data-toggle="table" data-pagination="false">
		        <thead>
		          <tr>
		            <th>Nom</th>
		            <th>Prénom</th>
		            <th>Victoires</th>
		            <th>Défaites</th>
		          </tr>
		        </thead>
		        <tbody>
		        {% if tableauMatchs is defined %}
		        {% for matches in tableauMatchs %}
		          <tr>
		           	<td>{{ matches.nom }}</td>
		           	<td>{{ matches.prenom }}</td>
		           	<td>{{ matches.victoires }}</td>
		           	<td>{{ matches.defaites }}</td>
		          </tr>
		        {% endfor %}
				{% endif %}
		        </tbody>
		      </table>
		</div>
	
	<div class="row mt-5">
		<div class="col-sm-3" >
			{{ form_row(formJoueurMatch.joueur_compet)}}
		</div>
		<div class="col-sm-2">
			{{ form_row(formJoueurMatch.victoires) }}
		</div>
		<div class="col-sm-2">
			{{ form_row(formJoueurMatch.defaites) }}
		</div>
		<div class="col-sm-2" hidden="true">
			{{ form_widget(formJoueurMatch.position,{'attr':{'disabled':'disabled'}})}}
		</div> 
	</div>

<br><br>
	<div class="row">	
		<div class="col-sm-2">
		<button type="submit" class="btn btn-success">Enregistrer</button>
 		</div>
 	<div class="col-sm-2">
 		<a href="{{ path('modifier_resultat_param', { 'id': idRencontre})}}"  class="btn btn-primary" aria-current="page" >Retour</a>
 	</div>
 	</div>
</div>

{{ form_end(formJoueurMatch) }} {% endblock %}