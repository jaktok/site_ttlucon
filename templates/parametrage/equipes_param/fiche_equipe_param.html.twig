{% extends 'parametrage/base_parametrage.html.twig' %} 
{% block title %} Hello IndexController! {% endblock %} 
{% form_theme formEquipe 'bootstrap_4_layout.html.twig' %} 

{% block body %}

{{ form_start(formEquipe) }}

<div class="container">
	<h1>Fiche Equipe</h1>

	<div class="row">
		<div class="col-sm-3" >
			{{ form_row(formEquipe.nom) }}
		</div>
		<div class="col-sm-3">
			{{ form_row(formEquipe.num_equipe) }}
		</div>
		<div class="col-sm-3">
			{{ form_row(formEquipe.division) }}
		</div>
		<div class="col-sm-3">
			{{ form_row(formEquipe.saison) }}
		</div>
	</div>
	<div class="row">	
		<div class="col-sm-2">
		    {{ form_row(formEquipe.photo) }}
 		</div>
		<div class="col-sm-2">
		    {{ form_row(formEquipe.joueur) }}
 		</div>
		<div class="col-sm-2">
		    {{ form_row(formEquipe.categories) }}
 		</div>
	</div>
	<br>
	<div class="row">	
		<div class="col-sm-2">
		    <button type="submit" class="btn btn-success">Enregistrer</button>
 		</div>
 	    <div class="col-sm-2">
 		    <a href="{{ path('equipes_param') }}"  class="btn btn-primary" aria-current="page" >Retour</a>
 	    </div>
 	</div>
</div>


{{ form_end(formEquipe) }} {% endblock %}