				{% endif %}
				{% if is_granted('ROLE_USER') %}
				<li class="nav-item"><a class="nav-link" href="/logout">Deconnexion</a></li>
				{% endif %}
				{% if is_granted('ROLE_ADMIN') %}
				<li class="nav-item"><a class="nav-link" href="/admin">Créer user</a></li>
				{% endif %}
