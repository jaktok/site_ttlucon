{% extends 'base.html.twig' %} 
{% block body %}

<meta charset="UTF-8" />

<!-- Insérer cette balise "link" après celle de Bootstrap -->
<link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css">

<!-- Insérer cette balise "script" après celle de Bootstrap -->
<script src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>

   <div class="container">
        <table class="table table-dark table-sm table-borderless " data-toggle="table" >
        <thead>
          <tr >
          	<th>Photo</th>
            <th data-sortable="true">Nom</th>
            <th>Prénom</th>
            <th data-sortable="true">Classement</th>
          </tr>
        </thead>
        <tbody>
        {% if joueurs is defined %}
        {% for joueur in joueurs %}
        {% if categorie == 'tous' %}
          <tr style="vertical-align: middle;">
          	<td><a href="https://www.pongiste.fr/include/pages/joueur.php?id_licence={{ joueur.numLicence }}&num_club=12850097&color=DA4453&taille=&tri=mois" target="_blank"><img src="{{ asset('/images/'~joueur.nomPhoto) }}" alt="" width="50"></a></td>
            <td>{{ joueur.nom }}</td>
            <td>{{ joueur.prenom }}</td>
            <td>{{ joueur.classement }}</td>
          </tr>
         {% elseif categorie == joueur.libelleCat %} 
          <tr style="vertical-align: middle;">
          <td><img src="{{ asset('/images/'~joueur.nomPhoto) }}" alt="" width="50"></td>
            <td>{{ joueur.nom }}</td>
            <td>{{ joueur.prenom }}</td>
            <td>{{ joueur.classement }}</td>
          </tr>
        {% endif %}
        {% endfor %}
		{% endif %}
        </tbody>
      </table>
    </div>

{% endblock %}