{% extends 'base.html.twig' %} {% block title %}Indivs{%
endblock %} {% block body %}
<meta charset="UTF-8" />

<!-- Insérer cette balise "link" après celle de Bootstrap -->
<link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css">

<!-- Insérer cette balise "script" après celle de Bootstrap -->
<script src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>


{{ form_start(formCompets) }}

   <div class="container">
        {% if categorie == 'Adulte'  %}
        	<h4 style="color: black">Liste des Compétitions individuelles Adulte</h4>
		{% elseif categorie == 'Jeune'  %}
			<h4 style="color: black">Liste des Compétitions individuelles jeunes</h4>
		{% elseif categorie == 'Adapte'  %}
		    <h4 style="color: black">Liste des Compétitions individuelles sport Adapté</h4>
    	{% else %}
        	<h4 style="color: black">Liste des Compétitions individuelles</h4>
		{% endif %}
    
        {% if compets is defined %}
        {% for compet in compets %}
        {% if compet.typeCompetition.libelle == categorie %}
          <table class="table table-striped" data-toggle="table" data-pagination="false">

        <tbody>
          <tr bordercolor="red" bgcolor= '#DAF7A6' >
           	<td>{{ compet.nom }}</td>
           	<td>{{ compet.numJournee }}</td>
           	<td>{{ compet.date|date('d-m-Y')  }}</td>
           	<td>{{ compet.typeCompetition.libelle }}</td>
        </tr>
        {% if tabMatchs is defined %}
     <table class="table table-striped" data-toggle="table" data-pagination="false">
         <thead>
	         <tr>
	            <th>Nom</th>
	            <th>Prénom</th>
	            <th>Victoires</th>
	            <th>Défaites</th>
	            <th>Position</th>
	         </tr>
        </thead>
        <tbody>
        {% for matchs in tabMatchs %}
        {% if matchs.id == compet.id %}
          <tr style="align-content: 15px;">
           	<td>{{ matchs.nom }}</td>
           	<td>{{ matchs.prenom }}</td>
           	<td>{{ matchs.victoires }}</td>
           	<td>{{ matchs.defaites }}</td>
           	<td>{{ matchs.position }}</td>
          </tr>
         {% endif %} 
        {% endfor %}
		{% endif %}
        </tbody>
      </table>
       
        </tbody>
	<div class="row" >
    <div class="col" ><hr color="red"></div>
   </div>

		{% endif %}
         {% endfor %}
		{% endif %}
      </table>
    </div>
    
    {{ form_end(formCompets) }}

{% endblock %}